            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".ContactMainList" />
        <activity
            android:label="@string/app_name"
            android:name=".ContactPeopleList" />
        <activity
            android:label="@string/app_name"
            android:name=".ContactGroupList" />
        <activity
            android:label="@string/app_name"
            android:name=".SetTimeMain" />
        <activity
            android:label="@string/app_name"
            android:name=".SetSentTime" />
        <activity
            android:label="@string/app_name"
            android:name=".ShowRunTask" />
        <activity
            android:label="@string/app_name"
            android:name=".SmsMainList"
